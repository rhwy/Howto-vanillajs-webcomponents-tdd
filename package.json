{
  "name": "howto-vanillajs-webcomponents-tdd",
  "version": "2.0.0",
  "description": "Build web components in Vanilla JS with a simple TDD workflow",
  "type": "module",
  "scripts": {
    "test": "web-test-runner \"components/**/*.test.js\" --node-resolve --playwright --browsers chromium",
    "test:watch": "npm run test -- --watch",
    "test:all-browsers": "web-test-runner \"components/**/*.test.js\" --node-resolve --playwright --browsers chromium firefox webkit",
    "dev": "live-server --port=3000",
    "dev:full": "concurrently --kill-others \"npm run dev\" \"npm run test:watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhwy/Howto-vanillajs-webcomponents-tdd.git"
  },
  "author": "Rui Carvalho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhwy/Howto-vanillajs-webcomponents-tdd/issues"
  },
  "homepage": "https://github.com/rhwy/Howto-vanillajs-webcomponents-tdd#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "concurrently": "^9.0.0",
    "live-server": "^1.2.2"
  }
}
